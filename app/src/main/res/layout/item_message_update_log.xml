<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="72dp"
    android:foreground="?attr/selectableItemBackground"
    app:cardBackgroundColor="@color/colorPrimaryDark"
    tools:layout_margin="16dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.DKQ.Section"
        android:textColor="@color/textSecondaryLight"
        android:layout_marginStart="72dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="12dp"
        android:layout_gravity="start|top"
        android:text="@string/word_update"/>

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="72dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="12dp"
        android:layout_gravity="start|bottom"
        android:maxLines="1"
        android:singleLine="true"
        android:ellipsize="end"
        android:textSize="21sp"
        android:textColor="@color/textPrimaryLight"
        tools:text="Version 2.0"/>

    <de.wackernagel.dkq.ui.widgets.BadgedView
        android:id="@+id/badge"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:badgePadding="16dp"
        app:badgeGravity="top|end"
        app:badgeText="@string/badge_new"/>

    <ImageView
        android:layout_width="@dimen/thumbnail_image_size"
        android:layout_height="@dimen/thumbnail_image_size"
        android:layout_marginStart="16dp"
        android:src="@mipmap/ic_launcher"
        android:layout_gravity="start|center_vertical"
        android:contentDescription="@null"/>

</androidx.cardview.widget.CardView>